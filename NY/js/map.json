{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Airbnb in New York",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/joannetrann/FIT3179/main/NY/js/ny_map.json",
        "format": {"type": "topojson", "feature": "ny_map"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/joannetrann/FIT3179/blob/main/NY/ny_clean.csv"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"}
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "tooltip": {"content": "data"}
          },
          "encoding": {
            "size": {"field": "price", 
                     "type": "quantitative",
                     "scale": {
                          "domain": [0, 299]
                        }},
            "color": {"field": "neighbourhood_group", 
                      "type": "nominal",
                      "scale":{
                          "scheme":"reds"
                      }          
            }
          }
        }
      ]
    }
  ]
}
