{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Airbnb in New York",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/joannetrann/FIT3179/main/NY/js/ny_map.json",
    "format": {
          "type": "topojson",
          "feature": "ny_map"
        }
  },
  "transform": [{
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/joannetrann/FIT3179/main/NY/NYC.csv"
        },
        "key": "neighbourhood_group",
        "fields": ["price"]
      }
    },
    {"calculate": "datum.price + 0.1", "as": "Price"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "price",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "neighbourhood_group"}
    
    ]
  }

}
