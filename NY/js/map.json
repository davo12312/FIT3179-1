{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Airbnb in New York",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/joannetrann/FIT3179/main/NY/js/ne_110m_admin_0_countries.json",
    "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
  },
  "transform": [{
      "lookup": "properties",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com//joannetrann/FIT3179/main/NY/ny_clean2.csv"
        },
        "key": "neighbourhood",
        "fields": ["price"]
      }
    },
    {"calculate": "datum.price + 0.1", "as": "price"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "price",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties", "type": "nominal", "title": "neighbourhood"},
      {"field": "price", "type": "quantitative"}
    ]
  }
