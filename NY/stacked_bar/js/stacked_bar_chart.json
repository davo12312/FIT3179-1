
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 900,
  "height": 300,
  "title": "Room Type Availability in each Neighbourhood",
  "data": {"url": "https://raw.githubusercontent.com/joannetrann/FIT3179/main/NY/stacked_bar/room_type3.csv"},
  "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
  "encoding": {
    "x": {"aggregate": "sum", "field":"Freq", "title": "Percentage of Rooms Available"},
    "y": {"field":"Room", "type": "nominal", "title": "Room Type"},
    "color": {"field": "Neighbourhood", "title": "Neighbourhood","scale":{"scheme": "pastel1"}
  }},
}

