{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Average Prices for Airbnb in New York Boroughs",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/joannetrann/FIT3179/main/NY/map/js/NTA%20map.json",
    "format": {
          "type": "topojson",
          "feature": "NTA map"
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
  },
  "transform": [{
      "lookup": "properties.boroname",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com//joannetrann/FIT3179/main/NY/map/ny_final.csv"
        },
        "key": "neighbourhood_group",
        "fields": ["price"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape"
    },
  "encoding": {
    "color": {
      "field": "price",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [ {"field": "properties.boroname", "type": "nominal", "title": "Borough"},
      {"field": "price", "type": "quantitative", "format": ".2f", "title": "Price"}
    ]
  }

}
